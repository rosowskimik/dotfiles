[core]
    autocrlf = input
    excludeFile = {{ .chezmoi.homeDir }}/.config/git/ignore
    attributesfile = {{ .chezmoi.homeDir }}/.config/git/attributes
[user]
    name = Miko≈Çaj Rosowski
    email = {{ .email }}
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[alias]
    c = commit
    s = status
    last = log -1 HEAD
    cleanall = clean -ffdx
[init]
    defaultBranch = main
[diff]
    algorithm = patience
    compactionHeuristic = true
    colorMoved = default
    submodule = log
[advice]
    addIgnoredFile = false
[commit]
    verbose = true
[difftool]
    prompt = false
[help]
    autocorrect = 1
[merge]
    conflictStyle = zdiff3
    tool = nvimdiff
[pager]
    difftool = true
[rebase]
    missingCommitsCheck = warn
[rerere]
    enabled = 1
    autoupdate = true
[status]
    submoduleSummary = -1
[submodule]
    fetchJobs = 0

{{- if stat (joinPath .chezmoi.homeDir ".config/git/cookies") }}
[http]
    cookiefile = {{ .chezmoi.homeDir }}/.config/git/cookies
{{- end }}

[url "git@github.com:"]
    insteadOf = gh:
[github]
    user = rosowskimik
{{- if lookPath "gh" }}
[credential "https://github.com"]
    helper = 
    helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
    helper = 
    helper = !/usr/bin/gh auth git-credential
{{- end }}

[include]
{{- if lookPath "delta" }}
    path = {{ .chezmoi.homeDir }}/.config/git/delta.gitconfig
{{- end }}

{{- if lookPath "git-lfs" }}
    path = {{ .chezmoi.homeDir }}/.config/git/lfs.gitconfig
{{- end }}

{{- if lookPath "difft" }}
    path = {{ .chezmoi.homeDir }}/.config/git/difftastic.gitconfig
{{- end }}

