general {
    hide_cursor = true
}

background {
    monitor =
    path = {{ .lock }}

    blur_passes = 1
    blur_size = 2
    noise = 0.0117
    contrast = 0.8916
    brightness = 0.8172
    vibrancy = 0.1696
    vibrancy_darkness = 0.0
}

input-field {
    monitor =
    size = 100, 50
    outline_thickness = 3
    dots_size = 0.33
    outer_color = rgb(48, 192, 240)
    inner_color = rgba(20, 20, 20, 0.4)
    font_color = rgb(200, 200, 200)
    fade_on_empty = false
    placeholder_text =
    hide_input = true

    position = 0, -350
    halign = center
    valign = center
}

label {
    monitor =
    text = $TIME
    color = rgba(200, 200, 200, 1.0)
    font_size = 60
    font_family = Verdana

    position = 0, 480
    halign = center
    valign = center
}

